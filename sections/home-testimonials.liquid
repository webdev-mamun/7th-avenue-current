{% if section.blocks.size > 0 %}
<section class="home homepage-section customer_testimonials_slider_section" data-section-id="{{ section.id }}" data-section-type="slideshow-section">  
  <div class="mw">
    <div class="customer_testimonials_slider_wrapper">
      <div class="customer_testimonials_slider">
        {% for block in section.blocks %}
        <div>
          <h3>{{block.settings.testimonial}}</h3>
          <p>â€” {{block.settings.author}}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<div class="clear"></div>
{% endif %}
