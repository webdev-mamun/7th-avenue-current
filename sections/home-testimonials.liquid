      "settings": [
		{
		  "type": "textarea",
		  "id": "testimonial",
		  "label": "Testimonial"
		},
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        }
      ]
    }
  ],
  "settings": [
      
  ],
  "presets": [{
    "name": "Testimonials",
    "blocks": [
      {
        "type": "testimonial"
      }
    ]
  }]
}
{% endschema %}
