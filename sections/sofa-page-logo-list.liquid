<div class="logo-list logo-list__{{ section.id }}">
  <div class="row">
    <div class="logo-list__container">
      {% for block in section.blocks %}
      {% if block.settings.logo_svg != blank or block.settings.image != blank %}
      <div class="logo">
        {% if block.settings.logo_svg != blank %}
        <img src="{{ block.settings.logo_svg }}" alt="Logo" width="100%" height="100%" loading="lazy">
        {% else %}
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}" width="100%" height="100%" loading="lazy"> 
        {% endif %}
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .logo-list__{{ section.id }} .logo-list__container {
    {% if section.settings.border_top %}
    border-top: 1px solid #d6d6d6;
    {% endif %}
    {% if section.settings.border_bottom %}
    border-bottom: 1px solid #d6d6d6;
    {% endif %}
  }
</style>

{% schema %}
    {
    "name": "Logo list",
	"max_blocks": 5,
    "settings": [
		{
         "type":"header",
         "content":"border"
        },
        {
           "type":"checkbox",
           "id":"border_top",
           "label":"Enable border top",
           "default":true
        },
        {
           "type":"checkbox",
           "id":"border_bottom",
           "label":"Enable border bottom",
           "default":true
        }
	],
	"blocks": [
		{
			"type":"logo",
			"name":"logo",
			"settings": [
				{
					"type":"url",
					"id":"logo_svg",
					"label":"Svg URL"
				},
				{
					"type":"image_picker",
					"id":"image",
					"label":"Logo"
				}
			]
		}
	]
  }
{% endschema %}
