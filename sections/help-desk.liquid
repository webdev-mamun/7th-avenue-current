{%- liquid
	assign title = section.settings.title
    assign text = section.settings.text
    assign covet_pics = section.settings.covet_pic
    
    assign btn_1_url = section.settings.btn_1_url
    assign btn_1_text = section.settings.btn_1_text
    assign btn_1_reamaze = section.settings.btn_1_reamaze
    if btn_1_url != blank or btn_1_reamaze
    assign btn_1 = true
    endif
    
    assign btn_2_url = section.settings.btn_2_url
    assign btn_2_text = section.settings.btn_2_text
    assign btn_2_reamaze = section.settings.btn_2_reamaze
    if btn_2_url != blank or btn_2_reamaze
    assign btn_2 = true
    endif
-%}

<section class="help-desk-wrapper">
  <div class="help-desk__container">
    <div class="help-desk">
      <div class="help-desk__content">
        {%- if title != blank -%}
        <h2 class="help-desk__title">{{ title }}</h2>
        {%- endif -%}
        {%- if text != blank -%}
        <p class="help-desk__text">{{ text }}</p>
        {%- endif -%}
        {%- if btn_1 == true or btn_1 == true -%}
        <div class="help-desk__btn--wrapper">
          {%- if btn_1 == true -%}
          <a href="{{ btn_1_url }}" class="help-desk__btn{% if btn_1_reamaze %} reamaze__open{% endif %}">{{ btn_1_text }}</a>
          {% endif %}
          {%- if btn_2 == true -%}
          <a href="{{ btn_2_url }}" class="help-desk__btn{% if btn_2_reamaze %} reamaze__open{% endif %}">{{ btn_2_text }}</a>
          {%- endif -%}
        </div>
        {%- endif -%}
      </div>
      <div class="help-desk__gallery--wrapper">
        {%- if covet_pics != blank -%}
        	{{ covet_pics }}
        {%- else -%}
        <div class="help-desk__gallery">
          {%- for block in section.blocks -%}
          {%- assign image = block.settings.image -%}
          <div class="help-desk__gallery--item">
            <a href="{{ image | img_url: '500x' }}" data-fancybox="help-desk">
              <img src="{{ image | img_url: '500x500' , crop: 'center' }}" alt="{{ image.alt | escape }}" width="100%" height="100%" loading="lazy">
            </a>
          </div>
          {%- endfor -%}
        </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

