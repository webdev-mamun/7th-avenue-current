
{% for block in section.blocks %}
{% assign selected_article = articles[block.settings.article]%}
{% if selected_article.handle == article.handle %}
<div class="article_quote_wrapper">
  <div class="grid_wrapper">
    <div class="desktop-6 mobile-12 span-6">
     <div class="quote_image">
       <div class="article_quote_image">
          {% if block.settings.image %}          
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{block.settings.quote}}" width="100%" height="100%" loading="lazy">
          {% endif %}
        </div>
      </div>
    </div>
    <div class="desktop-6 mobile-12 span-6">
      <blockquote>{{block.settings.quote}}</blockquote>
    </div>
  </div>
</div>
{% break %}
{% endif %}
{% endfor %}
{% schema %}
  {
    "name": "Article Quote",
    "settings": [],
	"blocks": [
	  {
		"name": "Quote",
		"type": "quote",
		"settings": [
		  {
			"type": "article",
			"id": "article",
			"label": "Select Article"
		  },
		  {
			"type": "image_picker",
			"id": "image",
			"label": "Quote Image"
		  },
		  {
			"type": "textarea",
			"id": "quote",
			"label": "Quote"
		  }
		]
	  }
	]
  }
{% endschema %}
