{% assign product_vendor = product.vendor | handleize %}
{% for block in section.blocks %}
{% assign block_vendor = block.settings.name | handleize %}
{% if block_vendor == product_vendor %}
<div class="artist_area">
  <div class="rows">
    <div class="artist_grid mw">
      <div class="artist_column">
        <div class="artist_header">
          <div class="artist_highlight_text_header">
          	<h3 class="artist_highlight_text">ARTIST HIGHLIGHT</h3>
          </div>
          <h2>{{block.settings.name}}</h2>
          <address class="artist_address"><img src="https://cdn.shopify.com/s/files/1/0602/7195/2115/files/location.png?v=1733374748" width="100%" height="100%" lazyload="lazy" alt="bitmap"> <span>{{block.settings.city}}</span></address>
        </div>
        <div class="artist_body">
          <p>{{block.settings.description}}</p>
        </div>
        <div class="artist_quote">
          <blockquote>{{block.settings.quote}}</blockquote>
        </div>
      </div>
      <div class="artist_column">
        <div class="artist_image">
          {% render 'image-lazyload', image: block.settings.image %}
        </div>
      </div>
    </div>
  </div>
</div>
{% break %}
{% endif%}
{% endfor %}


{% schema %}
  {
    "name": "Artist highlight",
    "settings": [],
	"blocks": [
	  {
		"type": "artist",
		"name": "Artist",
		"settings": [
		  {
			"type": "text",
			"id": "name",
			"label": "Name"
		  },
		  {
			"type": "text",
			"id": "city",
			"label": "City"
		  },
		  {
			"type": "textarea",
			"id": "description",
			"label": "Description"
		  },
		  {
			"type": "textarea",
			"id": "quote",
			"label": "Quote"
		  },
		  {
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		  }		  
		]
      }
	]
  }
{% endschema %}
